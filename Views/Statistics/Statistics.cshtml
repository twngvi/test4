@model IEnumerable<test4.Models.TourStatisticsViewModel>
@{
    ViewData["Title"] = "Tour Statistics";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0 text-center">📊 Tour Statistics Overview</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Tour ID</th>
                        <th>Tour Name</th>
                        <th>Number of Destinations</th>
                        <th>Total Tour Days</th>
                        <th>Total Price (Sum)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tour in Model)
                    {
                        <tr>
                            <td>@tour.TourID</td>
                            <td class="text-start">@tour.TourName</td>
                            <td>@tour.NumberOfDestinations</td>
                            <td>@tour.TotalTourDays</td>
                            <td class="text-end text-success fw-bold">@string.Format("{0:N0} đ", tour.TotalPrice)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
