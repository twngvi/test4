@model IEnumerable<test4.Data.Destination>

<table class="table">
    <thead>
        <tr>
            <th>Destination ID</th>
            <th>Destination Name</th>
            <th>City</th>
            <th>Tour Name</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DestinationId)</td>
                <td>@Html.DisplayFor(modelItem => item.DestinationName)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.Tour.TourName)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhotoPath))
                    {
                        <img src="@item.PhotoPath" alt="@item.DestinationName" style="width: 50px; height: 50px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DestinationId" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DestinationId" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DestinationId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No destinations found matching your search criteria.
    </div>
}
