@model test4.Data.Destination

@{
    ViewData["Title"] = "Chi tiết";
}

<h1>Chi tiết</h1>

<div>
    <h4>Destination</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên điểm đến
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DestinationName)
        </dd>
        <dt class = "col-sm-2">
            Thành phố
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Ảnh
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@Model.PhotoPath" alt="@Model.DestinationName" style="max-width: 400px; max-height: 400px;" class="img-thumbnail" />
            }
            else
            {
                <span class="text-muted">Chưa có ảnh</span>
            }
        </dd>
        <dt class = "col-sm-2">
            Tour
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tour!.TourName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DestinationId">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại</a>
</div>
    <a asp-action="Index">Back to List</a>
</div>
