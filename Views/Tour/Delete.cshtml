@model test4.Models.TourViewModel

@{
    ViewData["Title"] = "Delete Tour";
}

<h1>Delete Tour</h1>

<h3>Are you sure you want to delete this tour?</h3>
<div>
    <h4>Tour Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tour Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TourName)</dd>
        
        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">
            @if(Model.Duration.HasValue)
            {
                @Model.Duration.Value <text>days</text>
            }
            else
            {
                <span class="text-muted">Not specified</span>
            }
        </dd>
        
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">
            @if(Model.Price.HasValue)
            {
                @Model.Price.Value.ToString("C")
            }
            else
            {
                <span class="text-muted">Not specified</span>
            }
        </dd>
        
        <dt class="col-sm-2">Destinations</dt>
        <dd class="col-sm-10">@Model.DestinationCount destination(s)</dd>
    </dl>

    @if(Model.DestinationCount > 0)
    {
        <div class="alert alert-warning">
            <strong>Warning:</strong> This tour has @Model.DestinationCount destination(s) associated with it.
        </div>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="TourId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
